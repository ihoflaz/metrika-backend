# Application
APP_HOST=0.0.0.0
APP_PORT=3000
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
AUTH_ACCESS_TOKEN_SECRET=dev-access-secret-change-me-1234567890
AUTH_REFRESH_TOKEN_SECRET=dev-refresh-secret-change-me-1234567890123456
AUTH_ACCESS_TOKEN_TTL=900
AUTH_REFRESH_TOKEN_TTL=1209600
PASSWORD_MIN_LENGTH=12

# PostgreSQL / TimescaleDB
DATABASE_URL=postgresql://metrika:metrika_pass@localhost:5432/metrika?schema=public
POSTGRES_DB=metrika
POSTGRES_USER=metrika
POSTGRES_PASSWORD=metrika_pass
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO (S3 uyumlu depolama)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=metrika-documents

# MailHog
MAILHOG_BASE_URL=http://localhost:8025
MAILHOG_SMTP_PORT=1025
MAILHOG_HTTP_PORT=8025

# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_TLS_REJECT_UNAUTHORIZED=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=no-reply@metrika.local

# Storage (MinIO/S3)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=metrika-documents

# ClamAV
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Alert System
# Slack webhook for alerts (get from Slack -> Incoming Webhooks)
# ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
ALERT_SLACK_CHANNEL=#alerts
ALERT_SLACK_USERNAME=Metrika Alert Bot
ALERT_SLACK_ICON=:rotating_light:

# Email alerts (requires SMTP configured above)
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=admin@metrika.com,ops@metrika.com

# Alert deduplication (prevents alert spam)
ALERT_DEDUPLICATION_ENABLED=true
ALERT_DEDUPLICATION_WINDOW_MS=300000  # 5 minutes

