# Test Environment Configuration
# Bu dosya NODE_ENV=test olduğunda .env dosyasının üzerine yazılır

# Application
APP_HOST=127.0.0.1
APP_PORT=0
LOG_LEVEL=silent
NODE_ENV=test

# Auth
AUTH_ACCESS_TOKEN_SECRET=test-access-secret-change-me-1234567890
AUTH_REFRESH_TOKEN_SECRET=test-refresh-secret-change-me-1234567890123456
AUTH_ACCESS_TOKEN_TTL=900
AUTH_REFRESH_TOKEN_TTL=1209600
PASSWORD_MIN_LENGTH=12

# PostgreSQL (testler için schema izolasyonu kullanılır)
DATABASE_URL=postgresql://metrika:metrika_pass@localhost:5432/metrika?schema=public

# SMTP (MailHog veya mock)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_TLS_REJECT_UNAUTHORIZED=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=no-reply@metrika.test

# Storage (MinIO/S3)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=metrika-documents-test

# ClamAV
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
